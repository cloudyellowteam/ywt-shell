[
    {
        "id": "cbb46398-a79e-4afe-9672-badabf6075e7",
        "name": "cloc",
        "description": "Count Lines of Code",
        "url": "https://github.com/AlDanial/cloc",
        "features": [
            "count",
            "count-by-lang"
        ],
        "capability": {
            "filesystem": [
                "{{.SourcePath}}"
            ],
            "version": [
                "--version"
            ],
            "count": [
                "{{.SourcePath}}"
            ],
            "count-by-lang": [
                "--by-file",
                "{{.SourcePath}}"
            ]
        },
        "state": {
            "install": {
                "mac": "brew install cloc",
                "linux": "sudo apt-get install cloc",
                "windows": "choco install cloc",
                "shell": [
                    "curl -o cloc https://raw.githubusercontent.com/AlDanial/cloc/master/cloc",
                    "chmod +x cloc",
                    "mv cloc /usr/local/bin/cloc"
                ]
            },
            "uninstall": {
                "mac": "brew uninstall cloc",
                "linux": "sudo apt-get remove cloc",
                "windows": "choco uninstall cloc",
                "shell": [
                    "rm /usr/local/bin/cloc"
                ]
            }
        },
        "worker": {
            "engines": [
                "process",
                "docker",
                "k8s",
                "remote"
            ],
            "cmd": "cloc",
            "args": [
                "--json",
                "--quiet",
                "--exclude-dir=sys,.git,.idea,node_modules"
            ]
        },
        "packages": {
            "npm": "cloc",
            "apt": "cloc",
            "docker": "danlynn/cloc:latest"
        },
        "sarif": {
            "tool": {
                "driver": {
                    "name": "cloc",
                    "informationUri": "https://github.com/AlDanial/cloc",
                    "rules": [
                        {
                            "id": "cloc",
                            "shortDescription": {
                                "text": "Counted {{.TotalFiles}} files with {{.TotalLines}} lines of code in {{.TotalLanguages}} languages"
                            }
                        }
                    ]
                }
            },
            "rules": {
                "cloc": {
                    "level": "note",
                    "message": "Counted {{.TotalFiles}} files with {{.TotalLines}} lines of code in {{.TotalLanguages}} languages",
                    "properties": {
                        "totalFiles": "{{.TotalFiles}}",
                        "totalLines": "{{.TotalLines}}",
                        "totalLanguages": "{{.TotalLanguages}}"
                    }
                }
            },
            "results": {
                "cloc": {
                    "ruleId": "cloc",
                    "message": "Counted {{.TotalFiles}} files with {{.TotalLines}} lines of code in {{.TotalLanguages}} languages",
                    "properties": {
                        "totalFiles": "{{.TotalFiles}}",
                        "totalLines": "{{.TotalLines}}",
                        "totalLanguages": "{{.TotalLanguages}}"
                    }
                }
            }
        }
    },
